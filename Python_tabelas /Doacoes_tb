from itertools import count

id_doacao = count(1)
doacoes = []

id_usuario = int(input("ID usuário: "))
valor = float(input("Valor da doação (0 se material): "))
tipo = input("Tipo (financeira/material): ")
descricao = input("Descrição: ")
data = input("Data (AAAA-MM-DD): ")

doacoes.append({
    "id": next(id_doacao),
    "id_usuario": id_usuario,
    "valor": valor,
    "tipo": tipo,
    "descricao": descricao,
    "data": data
})
print(doacoes)
